{
  "name": "Qt Dev Container",
  "build": { "dockerfile": "../Dockerfile" }, // 指向你的 Dockerfile

  // 1. 自动安装 C++ 插件
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",       // C++ 官方插件
        "ms-vscode.cmake-tools"     // CMake 工具 (推荐)
      ]
    }
  },

  // 2. 容器创建后的操作 (可选：自动生成 compile_commands.json)
  // "postCreateCommand": "mkdir -p build && cd build && cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON .."
}